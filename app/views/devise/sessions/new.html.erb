<!-- start form -->
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-5">
      <%= image_tag('f1.jpg', class: 'img-fluid') %>
    </div>
    <div class="col-5">
      <h2>Connexion Ã  votre compte</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-10">
          <%= f.email_field :email, autocomplete: "email", class: 'single-input', placeholder: 'email',onfocus: "this.placeholder = ''",onblur: "this.placeholder = 'Email'" %>
        </div>

        <div class="mt-10">
          <%= f.password_field :password, autocomplete: "current-password",class: 'single-input', placeholder: 'Mot de passe',onfocus: "this.placeholder = ''",onblur: "this.placeholder = 'Mot de passe'" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="mt-10">
            <%= f.check_box :remember_me %>
            <%= f.label :Se_souvenir_du_mot_de_passe  %>
          </div>
        <% end -%>

        <div class="mt-10">
          <%= f.submit "Connexion", class: 'genric-btn primary circle' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
