<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Mileage</th>
      <th>Delivery city</th>
      <th>Transport type</th>
      <th>Price</th>
      <th>Terms transport</th>
      <th>Weight package</th>
      <th>Volume package</th>
      <th>Package type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.mileage %></td>
        <td><%= service.delivery_city %></td>
        <td><%= service.transport_type %></td>
        <td><%= service.price %></td>
        <td><%= service.terms_transport %></td>
        <td><%= service.weight_package %></td>
        <td><%= service.volume_package %></td>
        <td><%= service.package_type %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

