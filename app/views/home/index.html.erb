<!-- start banner Area -->
<section class="banner-area relative" id="home">
  <div class="overlay overlay-bg"></div>
  <div class="container">
    <div class="row fullscreen d-flex align-items-center justify-content-center">
      <div class="banner-content col-lg-12">
        <h1 class="text-white">
          <span>Freedelivers</span> votre portail de livreur libre
        </h1>
        <%= form_tag services_path, method: :get do %>
          <div class="row justify-content-center form-wrap">
            <div class="col-lg-10 form-cols">
              <%= text_field_tag :search, params[:search],class: 'form-control', placeholder: "Dans quelle ville avez vous besoin d'un livreur ? " %>
            </div>

            <div class="col-lg-2 form-cols">
                 <%= submit_tag 'Search', class: 'btn btn-info' %>
            </div>
          </div>
        <% end %>
        <p class="text-white"> <span>Search by tags:</span> Tecnology, Business, Consulting, IT Company, Design, Development</p>
      </div>
    </div>
  </div>
</section>
<!-- End banner Area -->

